<resources>

	<style name="Bookmarks">
	</style>

	<style name="Bookmarks.Title">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@android:color/white</item>
	</style>
	
	<style name="History">
	</style>
	
	<style name="History.Title">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@android:color/white</item>
	</style>
	
	<style name="History.Url">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">#888888</item>
	</style>
	
	<style name="Dialog" parent="@android:style/Theme.Dialog"></style>
	
	<style name="Standard">
	    <item name="topBarBackground">@style/Standard.TopBar</item>
	    <item name="bottomBarBackground">@style/Standard.BottomBar</item>
	    <item name="topButtonBackground">@style/Standard.TopButton</item>
	    <item name="bottomButtonBackground">@style/Standard.BottomButton</item>
	</style>
	    
	<style name="Standard.TopBar">
	    <item name="android:background">@drawable/tb_background_top</item>
	</style>
	
	<style name="Standard.BottomBar">
	    <item name="android:background">@drawable/tb_background_bottom</item>
	</style>
	
	<style name="Standard.TopButton">
        <item name="android:background">@drawable/buttons</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
	<style name="Standard.BottomButton">
        <item name="android:background">@drawable/buttons_bottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>	
	    
	<style name="Dark" parent="android:Theme">
	    <item name="topBarBackground">@style/Dark.TopBar</item>
	    <item name="bottomBarBackground">@style/Dark.BottomBar</item>
	    <item name="topButtonBackground">@style/Dark.TopButton</item>
	    <item name="bottomButtonBackground">@style/Dark.BottomButton</item>
	</style>
	
	<style name="Dark.TopBar">
	    <item name="android:background">@drawable/tb_background_top_dark</item>
	</style>
	
	<style name="Dark.BottomBar">
	    <item name="android:background">@drawable/tb_background_bottom_dark</item>
	</style>
	
	<style name="Dark.TopButton"> 
        <item name="android:background">@drawable/item_background_holo_dark</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
	<style name="Dark.BottomButton">
        <item name="android:background">@drawable/item_background_holo_dark</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
